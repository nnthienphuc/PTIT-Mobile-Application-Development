<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/food_image_desc"
        />

    <TextView
        android:id="@+id/txtTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgHinh"
        android:layout_marginStart="12dp"
        android:text="Tên"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTen"
        android:layout_toEndOf="@id/imgHinh"
        android:layout_toStartOf="@id/quantityLayout"
        android:layout_marginEnd="8dp"
        android:text="Description"
        android:textColor="#3F51B5"
        android:textSize="14sp" />

    <!-- Số lượng + nút tăng/giảm -->
    <LinearLayout
        android:id="@+id/quantityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginEnd="8dp">

        <ImageButton
            android:id="@+id/btnMinus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_minus"
            android:backgroundTint="#CCCCCC"
            app:tint="#000000"
            android:contentDescription="@string/btn_minus" />

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="4dp" />

        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_plus"
            android:backgroundTint="#CCCCCC"
            app:tint="#000000"
            android:contentDescription="@string/btn_plus" />
    </LinearLayout>


</RelativeLayout>
