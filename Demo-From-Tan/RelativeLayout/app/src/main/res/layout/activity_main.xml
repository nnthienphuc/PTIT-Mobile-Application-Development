<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Android 1"
        />
    <TextView
        android:id="@+id/txtView2"
        android:layout_below="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Android 2"
        />
    <TextView
        android:id="@+id/txtView3"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Android 3"
        />
    <TextView
        android:id="@+id/txtView4"
        android:layout_below="@+id/txtView2"
        android:layout_toRightOf="@id/txtView2"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:textSize="22sp"
        android:padding="20dp"
        android:text="Android 4"
        />
    <TextView
        android:id="@+id/txtView5"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Android 5"
        />
    <TextView
        android:id="@+id/txtView6"
        android:layout_above="@id/txtView5"
        android:layout_toRightOf="@id/txtView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Android 6"
        />
</RelativeLayout>